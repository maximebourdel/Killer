<!DOCTYPE HTML>

<html lang="fr">
	<head>
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    	<meta name="viewport" content="width=device-width, initial-scale=1">
    	
		<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">
		
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		
		<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
		
		
		
		{% javascripts '@GamesKillerBundle/Resources/public/js/main.js' %}
		  <script src="{{ asset_url }}"></script>
	    {% endjavascripts %}
    
        {% javascripts'@GamesKillerBundle/Resources/public/images/favicon.ico'%}
		   <link rel="shortcut icon" href="{{ asset_url }}" />
	    {% endjavascripts %}
		
		<title>{% block title %}Killer{% endblock %}</title>
		
	</head>
  <body>
    
	  <nav role="navigation" class="navbar navbar-inverse">
	    <div class="navbar-header">
		    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			   <span class="icon-bar">
			   </span> 
			   <span class="icon-bar">
			   </span> 
			   <span class="icon-bar">
			   </span>
		    </button>
		</div>
		<div class="container-fluid">
	 		<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">	    
				    <li id="index"><a href="{{ path('games_killer_index') }}">Accueil</a></li>
	            	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li id="consultListCreatedKiller"><a href="{{ path('games_killer_consultCreatedListKillers') }}">Voir mes Killers</a></li>
                        <li id="consultListParticipationKiller"><a href="{{ path('games_killer_consultParticipationListKillers') }}">Voir mes Participations</a></li>
	            	    <li id="createKiller"><a href="{{ path('games_killer_createKiller') }}">Créer un nouveau Killer</a></li>
	            	    <li id="login"><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
	            	{% else %}
                        <li id="login"><a href="{{ path('login') }}">Connexion</a></li>
                        <li id="register"><a href="{{ path('games_user_create') }}">Nouveau?</a></li>
                    {% endif %}
                    
	          	</ul>
	        </div><!-- /.navbar-collapse -->
	 	</div><!-- /.container-fluid -->
	</nav>
	
    {% set flashbags = app.session.flashbag.all %}
    {% for type, flashes in flashbags if flashbags is not empty  %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }} fade in alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <p>{{ flash }}</p>
            </div>
        {% endfor %}
    {% endfor %}
        
       
    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    {#% penser à lancer la commande app/console mopa:bootstrap:symlink:less %#}
    	
    {% block body %}{% endblock %}

    {% block script %}{% endblock %}    
    
    <div class="container">
        <br />
        <br />
    	© Maxime Bourdel {{ "now"|date("Y") }} Tous droits réservés
    </div>
  
  </body>
</html>


